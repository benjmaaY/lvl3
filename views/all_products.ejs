<% include _layouts/header %>
    <div class="row">
            <div class="col-xs-12 col-md-3">
                <h3>Categories</h3>

                <ul class="list-group">
                    <li class="list-group-item"><a href="/products/all">All products</a> <span class="badge badge-primary badge-pill"><% if(user && user.admin == 1 && here == true) { %>
                    <%= c %>
                    <% } %></span></li>

                    <% categories.forEach(function(category) { %>
                        <li class="list-group-item">
                            <a href="/products/<%= category.slug %>"><%= category.title %></a>
                        </li>
                    <% }); %>
                </ul>
            </div>
            <div class="col-xs-12 col-md-1"></div>
            <div class="col-xs-12 col-md-8">
            <h2 class="text-center"> <%= c %> products...</h2>
    <div class="row products">
    
        <% products.forEach(function(product) { %>
        <div class="col-xs-12 col-md-4 p">

            <!--Card-->
            <div class="card" style="min-height: 320px;">

              <!--Card image-->
              <div class="view overlay">
              <a href="/products/<%= product.category %>/<%= product.slug %>">
                <img src="/product_images/<%= product.id %>/<%= product.image %>" class="card-img-top" alt="" style="max-height: 180px;">
              </a>
                <a>
                  <div class="mask rgba-white-slight waves-effect waves-light"></div>
                </a>
              </div>
              <!--Card image-->

              <!--Card content-->
              <div class="card-body text-center">
            
                <!--Category & Title-->
                <h5>
                  <strong>
                    <a href="" class="dark-grey-text"><%= product.title %>
                    </a>
                  </strong>
                </h5>

                <h4 class="font-weight-bold blue-text">
                  <strong><%= parseFloat(product.price).toFixed(2) %> TND</strong>
                </h4>
                                <a class="vd" href="/products/<%= product.category %>/<%= product.slug %>">View details</a>

              </div>
              <!--Card content-->

            </div>
            <!--Card-->

          </div>
            
        <% }); %>

    </div>
<% include _layouts/footer %>