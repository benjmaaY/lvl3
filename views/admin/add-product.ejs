<%- include('../_layouts/adminheader') %>
    <h2 class="page-title">Add a product</h2>

    <a href="/adminProducts/products" class="btn-sm btn purple-gradient">Back to all products</a>

    <br/>
    <br/>

    <form method="POST" action="/adminProducts/add" enctype="multipart/form-data">
        <div class="md-form">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" />
        </div>

        <div class="md-form">
            <label for="">Description</label>
            <textarea name="description" class="form-control md-textarea" cols="30" rows="10">
                <%= description %>
            </textarea>
        </div>

        <div class="form-group">
            <label for="">Category</label>
            <select name="category" class="form-control">
                <% category.forEach(function(cat) { %>
                    <option value="<%= cat.slug %>">
                        <%= cat.title %>
                    </option>
                <% }); %>
            </select>
        </div>

        <div class="md-form">
            <label for="">Price</label>
            <input type="text" class="form-control" name="price" value="<%= price %>" />
        </div>

        <div class="form-group">
            <label for="">Image</label>
            <input type="file" class="form-control" name="image" id="img" />
            <img src="#" id="imgPreview" alt="" />
        </div>

        <button class="btn btn-default">Submit</button>
    </form>

    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $("#imgPreview").attr('src', e.target.result).width(100).height(100);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#img").change(function () {
            readURL(this);
        });
    </script>

    <%- include('../_layouts/adminfooter') %>